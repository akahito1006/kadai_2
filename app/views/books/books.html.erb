<p id="notice">
    <%= notice %>
</p>
<h1>Books</h1>
<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", booklist_path(book.id) %>
        <!--also %= link_to "Show", "/booklists/#{book.id}" %> 名前付きパスで指定するとroutesの編集だけで済むようになり簡単-->
      </td>
      <td>
        <%= link_to "Edit", edit_booklist_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", destroy_booklist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        <!--method: :delete & routes method delete-->
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book, url:"/book", local:true do |f| %>
<!--URL is just for the post method on routes.rb-->
  <div class="field">
    <%= f.label :title, "Table" %>
    <%= f.text_field :title %>
  </div>
  <!--class="label"-->
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
  <!--submit-->
<% end %>

